macro(sanitize_env)
	# remove "." from path to avoid searching the build_dir/bin folder
	set(ORIG_PATH $ENV{PATH})
	set(MOD_PATH $ENV{PATH})
	list(REMOVE_ITEM MOD_PATH .)
	set(ENV{PATH} ${MOD_PATH})
endmacro()

macro(restore_env)
	set(ENV{PATH} ${ORIG_PATH})
endmacro()
